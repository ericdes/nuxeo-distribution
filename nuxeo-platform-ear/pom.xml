    <!--
      Three following profiles allow to choose between default VSC and JCR
      storage. DO NOT CALL those profiles, but set the "jcr" property to switch
      on JCR storage: "mvn package -Djcr"
    -->
    <profile>
      <id>jcr-profile</id>
      <activation>
        <property>
          <name>jcr</name>
        </property>
      </activation>
      <properties>
        <nuxeo.ear>${nuxeo.ear.assembly}-jcr.ear</nuxeo.ear>
      </properties>
      <dependencies>
        <!-- JCR Storage -->
        <dependency>
          <groupId>org.nuxeo.ecm.core</groupId>
          <artifactId>nuxeo-core-jca</artifactId>
          <type>rar</type>
        </dependency>
        <dependency>
          <groupId>org.nuxeo.ecm.core</groupId>
          <artifactId>nuxeo-core-jcr-connector</artifactId>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>jcr-postgresql</id>
      <activation>
        <property>
          <name>jcr-pgsql</name>
        </property>
      </activation>
      <properties>
        <nuxeo.ear>${nuxeo.ear.assembly}-jcr-pgsql.ear</nuxeo.ear>
      </properties>
      <dependencies>
        <!-- JCR Storage -->
        <dependency>
          <groupId>org.nuxeo.ecm.core</groupId>
          <artifactId>nuxeo-core-jca</artifactId>
          <type>rar</type>
        </dependency>
        <dependency>
          <groupId>org.nuxeo.ecm.core</groupId>
          <artifactId>nuxeo-core-jcr-connector</artifactId>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>vsc-profile</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>!jcr</name>
        </property>
      </activation>
      <dependencies>
        <!-- Visible Storage Content -->
        <dependency>
          <groupId>org.nuxeo.ecm.core</groupId>
          <artifactId>nuxeo-core-storage-sql</artifactId>
        </dependency>
        <dependency>
          <groupId>org.nuxeo.ecm.core</groupId>
          <artifactId>nuxeo-core-storage-sql-ra</artifactId>
          <type>rar</type>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

